{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "wujt/multi-react-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "wujt/multi-react-server",
            // renamed 'server' to 'api' in nginx config due to name sambiguity
            "hostname": "api",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "wujt/multi-react-nginx",
            // hence nobody is going to reach nginx, this field is optional
            "hostname": "nginx",
            "essential": true,
            // unidirectional only:  nginx -> client   client !=> nginx
            "links": [
                "client",
                "server"
            ]
        },
        {
            "name": "worker",
            "image": "wujt/multi-react-worker",
            "hostname": "worker",
            "essential": false,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ]
        }
    ]
}
